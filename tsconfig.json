{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["db/*"],
      "@parse/*": ["parse/*"],
      "@shared/*": ["shared/*"],
      "@api/*": ["api/*"],
      "@controllers/*": ["controllers/*"],
      "@tg/*": ["tg/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "global.d.ts"]
}
